{{outlet}}
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Length</th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |movie|}}
        <tr>
            <td>{{movie.title}}</td>
            <td>{{movie.yearReleased}}</td>
            <td>{{movie.length}}</td>
            <button {{action "deleteMovie" movie.id}}>X</button>
        </tr>
        {{/each}}
        <tr>
            <td>{{input value=title placeholder="Title"}}</td>
            <td>{{input value=yearReleased placeholder="Year"}}</td>
            <td>{{input value=length placeholder="Length"}}</td>
            <button {{action "addMovie"}}>+</button>
        </tr>
    </tbody>
</table>